<html>
  <head></head>
  <body>
<h1>If you have an account log in here:</h1>
<form action="/credentials_checker" method="post">
  <label for="username">Username:</label><br>
  <input type="text" id="username" name="username"><br>
  <label for="password">Password:</label><br>
  <input type="text" id="password" name="password"><br>
  <input type="submit" value="Submit">
</form>
<p>Incorrect details, please try again</p>
<form action="/sign_up" method="get">
<a href="/sign_up">Click here to register for an account</a>
</form>
    <h1>Peeps</h1>
    <% @peep_repo.all.reverse.each do |peep| %>
      <div>
      <p><%= @user_repo.find(peep.user_id).username %>: <%= peep.content %></p>
      <p><%= peep.time_posted %>
    </div>
    <% end %>
  </body>
</html>